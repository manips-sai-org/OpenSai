<simvizConfiguration redisPrefix="opensai"
	worldFilePath="${WORLD_FILES_FOLDER}/world_mobile_base.urdf"
	mode="simviz">

	<simParameters speedupFactor="3.0"
		frictionCoefficient="0.5"/>

	<logger logFolderName="log_files/single_panda/simviz"
		enabledAtStartup="true"
		addTimestampToFilename="false" />

	<!-- <forceSensor robotOrObjectName="Panda"
		linkName="end-effector"
		filterCutoff="5.0" /> -->
</simvizConfiguration>

<robotControlConfiguration robotName="Panda"
	redisPrefix="opensai"
	robotModelFile="${ROBOT_FILES_FOLDER}/mobile_base.urdf">
	<baseFrame xyz="0 0 0"
		rpy="0 0 0" />
	<worldGravity xyz="0 0 -9.81" />

	<logger logFolderName="log_files/single_panda/controller"
		enabledAtStartup="true"
		addTimestampToFilename="false" />

	<controller name="cartesian_controller">
		
		<motionForceTask name="cartesian_task"
			linkName="end-effector">
			<velocitySaturation enabled="true" />
			<otg type="disabled" />
		</motionForceTask>

		<jointTask name="mobile_base">
			<controlledJointNames>
				prismatic1
				prismatic2
			</controlledJointNames>

			<otg type="acceleration"
				maxVelocity="0.5"
				maxAcceleration="5"
				/>
		</jointTask>

		<jointTask name="joint_task">
			<otg type="disabled" />
		</jointTask>
	</controller>

	<controller name="joint_controller">
		<jointTask name="joint_task">
			<velocitySaturation enabled="true" />
			<otg type="disabled" />
		</jointTask>
	</controller>

</robotControlConfiguration>

<robotControlConfiguration robotName="Dog"
	redisPrefix="opensai"
	robotModelFile="${ROBOT_FILES_FOLDER}/dog.urdf">
	<baseFrame xyz="0 0 0"
		rpy="0 0 0" />
	<worldGravity xyz="0 0 -9.81" />

	<logger logFolderName="log_files/single_panda/controller"
		enabledAtStartup="true"
		addTimestampToFilename="false" />

	<controller name="joint_controller">
		<jointTask name="joint_task">
			<otg type="acceleration"
				maxVelocity="0.3"
				maxAcceleration="3"
				/>
		</jointTask>
	</controller>

</robotControlConfiguration>